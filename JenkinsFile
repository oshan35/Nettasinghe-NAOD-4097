pipeline {
    agent any
    stages {
        stage ('SCM checkout'){
            steps{
                retry(3){
                    checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/oshan35/Nettasinghe-NAOD-4097.git']])
                }
            }
      
        }
        stage('build docker'){
            steps {
                sh 'docker build -t oshan190/ims-frontend-4097 .'
            }
        
        }
         stage('run'){
            steps{
                sh 'docker run -p 3000:3000 oshan190/ims-frontend-4097'
         }
         }
         stage('show running containners'){
      steps{
        sh 'docker ps'
      }
    }
    }
}